var form = $('#new_comment');

<% if @comment.errors.any? %>

if ($(".comment_errors")[0]){
    $('.comment_errors').remove();
}

// Create a list of errors
var errors = 'Sorry, you must write something... '

// Display errors before the form
$('<div />').addClass('comment_errors').html(errors).appendTo("#new_comment").hide().fadeIn('slow');;

<% else %>

if ($(".comment_errors")[0]){
    $('.comment_errors').remove();
}

$('#new_comment')[0].reset()

// Add the new comment to the beginning of the #comment division
$("#comments").append('<%= j(render(:partial => "comment", :object => @comment))%>').fadeIn(1500);

<% end %>