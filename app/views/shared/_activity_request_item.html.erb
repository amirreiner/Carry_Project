<div class="feed_item">
  <% if (current_user?(request_feed_item.user)) || (current_user.try(:admin?)) %>
      <div class="delete_post">
        <div class="bubbleInfo">
          <%=  link_to image_tag("delete_post.png"), request_feed_item, method: :delete, class: "trigger" %>
          <div class="popup" style="height:20px; width:190px; margin-top:57px;">
            <b style="color:#FF0523;">Delete</b> your delivery request.
            <div id="tail1" style="left:37px"></div>
            <div id="tail2" style="left:37px"></div>
          </div>
        </div>
      </div>
      <div class="edit_post">
        <div class="bubbleInfo">
          <%=  link_to image_tag("edit_post.png"), edit_request_delivery_path(request_feed_item), class: "trigger" %>
          <div class="popup" style="height:20px; width:170px; margin-top:57px;">
            <b style="color:#ff9054">Edit</b> your delivery request.
            <div id="tail1" style="left:35px"></div>
            <div id="tail2" style="left:35px"></div>
          </div>
        </div>
      </div>
  <% end %>
  <div class="right_index">
    <div class="feed_item_map">
      <img src="http://maps.google.com/maps/api/staticmap?size=150x150&maptype=roadmap&sensor=false&markers=color:green|label:A|<%= request_feed_item.from %>&markers=color:green|label:B|<%= request_feed_item.to %>" alt="Static, Marked Map of Chicago, Illinois and Hammond, Indiana with no Center and Zoom"></img>
    </div>
    <div class="feed_date" style="background-image: url('../assets/calendar.png');">
      Needed By: <b><%= request_feed_item.when.strftime("%d/%m/%Y") %></b>
    </div>
  </div>
  <div class="feed_item_info">
    <div class="feed_title" style="background-image: url('../assets/box.png');">
      <b><%= link_to request_feed_item.what, request_delivery_path(request_feed_item)  %></b>
    </div>
    <div class="feed_request_data">
      <div class="feed_from_and_to" style="background-image: url('../assets/index_LocationA.png');">
        From: <b><%= request_feed_item.from %></b>
      </div>
      <div class="feed_from_and_to" style="background-image: url('../assets/index_LocationB.png');">
        To: <b><%= request_feed_item.to %></b>
      </div>
      <div class="feed_item_money">
        <b><%= link_to "Delivery Reward: " + request_feed_item.cost + " " + request_feed_item.currency, request_delivery_path(request_feed_item)  %></b>
      </div>
    </div>
  </div>
</div>