<%= form_for :message, url: [:reply, conversation] do |f| %>
    <%= f.hidden_field :subject, :value => "Reply" %>
    <%= f.text_area :body, :rows => 3, :placeholder => "Type your message here..."    %>
    <%= link_to image_tag("Cancel.png"),  :back %>
    <%= f.submit "Reply", :type => :image, :src => "../assets/Reply.png"  %>
<% end %>
