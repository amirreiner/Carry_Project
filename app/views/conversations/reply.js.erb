var form = $('#new_reply');

<% if conversation.errors.any? %>

// Delete errors from previous submission
if ($(".new_reply_errors")[0]){
    $('.new_reply_errors').remove();
}

// Create a list of errors
var errors = 'Sorry, you cannot send blank messages... '

// Display errors before the form
$('<div />').addClass('new_reply_errors').html(errors).appendTo("#new_reply").hide().fadeIn('slow');;

<% else %>

// On successful creation of new conversation, redirect to main page
window.location.href = "/"

<% end %>