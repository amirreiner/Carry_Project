  <div class="navbar-inner">
    <div class="container">
      <%= link_to "The Carry Project", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right" id="header_items">
          <% if signed_in?  %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Request Delivery <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "New Request", request_path  %></li>
                  <li><%= link_to "Browse Suggestions", suggestions_path  %></li>
                </ul>
              </li>
              <li id="fat-menu" class="dropdown">
